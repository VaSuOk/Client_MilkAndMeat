                             FontSize="20"
                             HorizontalAlignment="Center"
                             Foreground="#FF081132"
                             Background="Transparent"
                             BorderThickness="0"
                             Width="250"
                             HorizontalContentAlignment="Left"
                             Opacity="1"
                             Height="25"
                             Margin="10,0,0,0" >

                </TextBox>

            </StackPanel>
            <Border x:Name="BPhone"
                        Width="400"
                        Height="2"
                        Background="#FF081132"
                        Opacity="1"/>

            <Button Margin="0,70,0,0" 
                    Background="#FF081132"
                    FontFamily="Helvetica"
                    FontWeight="Bold"
                    HorizontalAlignment="Center" 
                    Width="160" Height="40" 
                    Content="SAVE ALL" 
                    FontSize="24"
                    Click="Button_Click"
