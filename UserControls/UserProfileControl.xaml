            </StackPanel>
            <Border x:Name="BDescription"
                        Width="400"
                        Height="2"
                        Background="#FF081132"
                        Opacity="1"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <iconPacks:PackIconMaterial Kind="Road" 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Center" 
                                                Foreground="#FF081132"/>
