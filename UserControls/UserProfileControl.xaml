                             FontSize="16"
                             HorizontalAlignment="Center"
                             Foreground="#FF081132"
                             Background="Transparent"
                             BorderThickness="1"
                             Width="378"
                             HorizontalContentAlignment="Left"
                             Opacity="1"
                             Height="67"
