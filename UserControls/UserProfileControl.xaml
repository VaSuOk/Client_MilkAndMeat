                             Name="LogBar"
                             FontWeight="Medium"
                             Content="LogBar"
                             FontSize="20"
                             HorizontalAlignment="Center"
                             Foreground="Red"
                             Background="Transparent"
                             HorizontalContentAlignment="Center"
                             BorderThickness="0"
                             Width="600"
                             Visibility="Hidden"
                             Opacity="1"
                             Height="35"
                             Margin="10,0,0,0">

            </Label>
        </StackPanel>
        
        <StackPanel Margin="0,20,0,0">
            <Label
                FontWeight="Bold"
                             Content="User Data"
                             FontSize="30"
                                FontFamily="Helvetica"
                             HorizontalAlignment="Center"
                             Foreground="#FF081132"
                             Background="Transparent"
                             BorderThickness="1"
                             HorizontalContentAlignment="Left"
                             Opacity="1"
                             Height="50">
                
            </Label>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,20,0,0">
